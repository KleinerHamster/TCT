<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".customer.catalog.CatalogCustomerFragment">

    <FrameLayout
        android:id="@+id/btnCart"
        android:layout_width="match_parent"
        android:layout_gravity="end"
        android:layout_height="wrap_content">
        <!--Кнопка для перехода к корзине-->
        <ImageView
            android:id="@+id/go_to_order"
            android:layout_width="40dp"
            android:layout_marginEnd="10dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            app:srcCompat="@drawable/basket_order" />
        <com.nex3z.notificationbadge.NotificationBadge
            android:id="@+id/badge"
            android:layout_width="20dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:textSize="8sp"
            app:nbBackground="@drawable/notion_badge_bg"
            android:textColor="@color/background"
            android:layout_height="20dp"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fl_wrapper_main_catalog"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>