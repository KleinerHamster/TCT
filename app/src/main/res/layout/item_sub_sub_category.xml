<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/background">

    <androidx.cardview.widget.CardView
        style="@style/CardViewNews">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--фотография трубы -->
            <androidx.cardview.widget.CardView
                style="@style/CardViewPhotoNews.Sub">
                <ImageView
                    android:id="@+id/photoPipeSubCategory"
                    style="@style/ImageViewPhotoNews.Sub"
                    android:src="@drawable/lg" />
            </androidx.cardview.widget.CardView>
                <!-- Название подкатегории-->
            <TextView
                android:id="@+id/subCategoryTitle"
                style="@style/ItemTitleMainCategory"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Трубы серии МУЛЬТИПАЙП"
                android:textSize="18dp" />
        </LinearLayout>
        <!-- кнопка добаления товара в корзину -->
        <androidx.cardview.widget.CardView
            android:id="@+id/button_buy_sub_sub"
            style="@style/CardViewSubSub">
            <ImageView
                android:id="@+id/go_to_order"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/basket_sub_sub" />

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>